<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_gravity="center_vertical"
		android:padding="10dp">

		<com.cxd.sliderecyclerview.view.CircleImageView
			android:id="@+id/item_message_image"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dp"/>

		<TextView
			android:id="@+id/item_message_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_toRightOf="@id/item_message_image"
			android:textSize="20sp"/>

		<TextView
			android:id="@+id/item_message_lastMsg"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@id/item_message_name"
			android:layout_below="@id/item_message_name"
			android:layout_marginTop="5dp"
			android:textSize="15sp"/>

	</RelativeLayout>

	<LinearLayout
		android:id="@+id/layout_menu"
		android:layout_width="160dp"
		android:layout_height="match_parent">

		<Button
			android:id="@+id/item_message_top"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="#888888"
			android:gravity="center"
			android:text="置顶"
			android:textColor="#ffffff"
			android:textSize="20sp"/>

		<Button
			android:id="@+id/item_message_delete"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="#ff0000"
			android:gravity="center"
			android:text="删除"
			android:textColor="#ffffff"
			android:textSize="20sp"/>

	</LinearLayout>

</LinearLayout>